# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page#
#GET     /                           controllers.HomeController.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)


POST    /recipes                            controllers.HomeController.createRecipe()
GET     /recipes                            controllers.HomeController.listRecipes()
GET     /recipe/:recipeID                   controllers.HomeController.getRecipe(recipeID: String)
PATCH   /recipe/:recipeID/:newRecipeName    controllers.HomeController.updateRecipeName(recipeID: String, newRecipeName: String)
DELETE  /recipe/:recipeID                   controllers.HomeController.deleteRecipe(recipeID: String)